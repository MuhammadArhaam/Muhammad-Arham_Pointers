#include <iostream>
using namespace std;
int sumArray(int* arr, int size)
{
    int sum = 0;
    for (int i = 0; i < size; i++) 
    {
        sum += *(arr + i);
    }
    return sum;
}
int main()
{
    int size;
    cout << "Enter the size of the array= ";
    cin >> size;
    int* dynArray = new int[size];
    for (int i = 0; i < size; i++)
    {
        cout << "Enter element " << i << "= ";
        cin >> *(dynArray + i);
    }
    int total = sumArray(dynArray, size);
    cout << "Sum of array elements: " << total << endl;
    delete[] dynArray;
    return 0;
}
